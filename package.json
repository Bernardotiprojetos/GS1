{
  "name": "show-do-milhao-gs1",
  "version": "1.0.0",
  "description": "Show do Milhao GS1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.sibionics.showdomilhao",
    "productName": "Show do Milhao GS1",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "keywords": [
    "game",
    "quiz",
    "gs1"
  ],
  "author": "Sibionics",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.3.0"
  }
}
